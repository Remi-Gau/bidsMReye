    \n    ], \
    \n    [ \
    \n      "run", \
    \n      "wget -q https://osf.io/download/89nky/ -O models/dataset5_free_viewing.h5" \
    \n    ], \
    \n    [ \
    \n      "miniconda", \
    \n      { \
    \n        "create_env": "bidsmreye", \
    \n        "conda_install": [ \
    \n          "python=3.9", \
    \n          "pip" \
    \n        ], \
    \n        "activate": true, \
    \n        "pip_install": [ \
    \n          "git+https://github.com/cpp-lln-lab/bidsMReye.git" \
    \n        ] \
    \n      } \
    \n    ], \
    \n    [ \
    \n      "copy", \
    \n      [ \
    \n        "./docker/entrypoint.sh", \
    \n        "/neurodocker/startup.sh" \
    \n      ] \
    \n    ], \
    \n    [ \
    \n      "run", \
    \n      "chmod +x /neurodocker/startup.sh" \
    \n    ], \
    \n    [ \
    \n      "cmd", \
    \n      [ \
    \n        "bidsmreye" \
    \n      ] \
